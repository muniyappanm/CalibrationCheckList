<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/reportbytt"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:text="Report by TT"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    <AutoCompleteTextView
        android:id="@+id/rbtt_ttnumber"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:layout_marginStart="20dp"
        android:ems="8"
        android:background="@drawable/edit_round"
        android:layout_below="@+id/reportbytt"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:layout_marginLeft="20dp" />
    <Button
        android:id="@+id/btn_reportbytt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reportbytt"
        android:layout_toRightOf="@id/rbtt_ttnumber"
        android:layout_marginStart="10dp"
        android:text="enter"
        android:layout_marginLeft="10dp" />
    <TextView
        android:id="@+id/reportbydate"
        android:layout_below="@id/btn_reportbytt"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="50dp"
        android:text="Report by Date"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/rbdate_date"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:layout_marginStart="20dp"
        android:ems="8"
        android:background="@drawable/edit_round"
        android:layout_below="@+id/reportbydate"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:inputType="date"
        android:hint="25-10-2020"
        android:textAlignment="center"/>
    <Button
        android:id="@+id/btn_reportbydate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reportbydate"
        android:layout_toRightOf="@id/rbdate_date"
        android:layout_marginStart="10dp"
        android:text="enter"
        android:layout_marginLeft="10dp" />
    <TextView
        android:id="@+id/creport"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/rbdate_date"
        android:text="Custom Report"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/fromdate"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:layout_marginStart="20dp"
        android:hint="20-11-2019"
        android:ems="8"
        android:background="@drawable/edit_round"
        android:layout_below="@+id/creport"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:inputType="date"
        android:layout_marginLeft="20dp"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/to"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/creport"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/fromdate"
        android:text="to"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    <TextView
        android:id="@+id/todate"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="2dp"
        android:hint="25-11-2019"
        android:ems="8"
        android:background="@drawable/edit_round"
        android:layout_below="@+id/creport"
        android:layout_toRightOf="@id/fromdate"
        android:textStyle="bold"
        android:inputType="date"
        android:textAlignment="center"
        android:gravity="center_vertical"></TextView>
    <Button
        android:id="@+id/btn_customeport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_below="@+id/todate"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:text="enter"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp" />
    <TextView
        android:id="@+id/loading_graph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="40dp"
        android:text="Loading...."
        android:visibility="invisible"/>

</RelativeLayout>